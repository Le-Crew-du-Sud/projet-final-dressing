<div class="container">
<div class="row">
  <div class="col-4">
    <div class="list-group" id="list-tab" role="tablist">
      <a class="list-group-item list-group-item-action active" id="list-useritems-list" data-toggle="list" href="#list-useritems" role="tab" aria-controls="useritems">Son Cloud Dressing</a>
    </div>
  </div>
  <div class="col-8">
    <div class="tab-content" id="nav-tabContent">
      <div class="tab-pane fade show active" id="list-useritems" role="tabpanel" aria-labelledby="list-useritems-list">
        <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Son Cloud Dressing</th>
            <th scope="col">Prix</th>

          </tr>
        </thead>
        <tbody>
          <% count = 1 %>
          <% @dressing_by_user.all.each do |attire| %>
          <tr>
            <td><%= count %></td>
            <td><%= link_to attire.title, attire_path(attire.id) %></td>
            <td><%= link_to number_to_euro(attire.price) , attire_path(attire.id) %></td>
          </tr>
          <% count += 1 %>
          <% end %>
          <% if @dressing_by_user.length == 0 %>
            <tr>
              <td></td><td colspan="4"><i> Ce Dressing n'est pas publique !</i></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    </div>
  </div>
</div>
</div>

<div class="checkout_area section-padding-80">
  <div class="container">
    <div class="row">
      <% if user_signed_in? && current_user.is_admin == true %>
        <div class="col-12 mb-30">
          <h5>Ton espace admin</h5>
        </div>
      <% else %>
        <div class="col-12 mb-30">
          <h5>Ton profil</h5>
        </div>
      <% end %>

      <div class="col-12 row">
        <div class="col-3">
          <div id="user_profile_picture_box">
            <%= image_tag "vendor_images/profilepic.jpg", alt: "profile_picture", id:"profilepicture" %>
          </div>
        </div>
        <div class="col-9 mb-50">
            <p> <%= current_user.first_name %> <%= current_user.last_name %></p>
          <p>Email de contact: <%= current_user.email %></p>
          <p>Utilisateur depuis le: <%= current_user.created_at %></p>

          <%= link_to 'Éditer mon profil',edit_user_registration_path, class:"btn essence-btn" %>

        </div>
      </div>

      <div class="col-12">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Ton Cloud Dressing</th>
              <th scope="col">Prix</th>
              <th scope="col">Modifier</th>
              <th scope="col">Supprimer</th>
            </tr>
          </thead>
          <tbody>
            <% count = 1 %>
            <% @attire_by_user.all.each do |attire| %>
              <tr>
                <td><%= count %></td>
                <td><%= link_to attire.title, attire_path(attire.id) %></td>
                <td><%= link_to attire.price, attire_path(attire.id) %></td>
                <td><%= link_to "Modifier", edit_attire_path(attire.id), class:"btn btn-outline-info btn-sm" %></td>
                <td><%= link_to "Supprimer", attire_path(attire.id), class:"btn btn-outline-danger btn-sm", data:{method: "DELETE"}%></td>
              </tr>
              <% count += 1 %>
            <% end %>

          </tbody>
        </table>

        <hr>

        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Tes vêtements à vendre</th>
              <th scope="col">Prix</th>
              <th scope="col">Modifier</th>
              <th scope="col">Supprimer</th>
            </tr>
          </thead>
          <tbody>
            <% count = 1 %>
            <% @attire_by_user_to_sell.all.each do |attire| %>
              <tr>
                <td><%= count %></td>
                <td><%= link_to attire.title, attire_path(attire.id) %></td>
                <td><%= link_to attire.price, attire_path(attire.id) %></td>
                <td><%= link_to "Modifier", edit_attire_path(attire.id), class:"btn btn-outline-info btn-sm" %></td>
                <td><%= link_to "Supprimer", attire_path(attire.id), class:"btn btn-outline-danger btn-sm", data:{method: "DELETE"}%></td>
              </tr>
              <% count += 1 %>
            <% end %>

          </tbody>
        </table>
        <hr>

        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Tes vêtements à prêter</th>
              <th scope="col">Prix</th>
              <th scope="col">Modifier</th>
              <th scope="col">Supprimer</th>
            </tr>
          </thead>
          <tbody>
            <% count = 1 %>
            <% @attire_by_user_to_lend.all.each do |attire| %>
              <tr>
                <td><%= count %></td>
                <td><%= link_to attire.title, attire_path(attire.id) %></td>
                <td><%= link_to attire.price, attire_path(attire.id) %></td>
                <td><%= link_to "Modifier", edit_attire_path(attire.id), class:"btn btn-outline-info btn-sm" %></td>
                <td><%= link_to "Supprimer", attire_path(attire.id), class:"btn btn-outline-danger btn-sm", data:{method: "DELETE"}%></td>
              </tr>
              <% count += 1 %>
            <% end %>

          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

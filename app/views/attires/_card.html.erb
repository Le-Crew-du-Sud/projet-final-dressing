<div class="col-lg-4 col-sm-6 col-md-6 p-5">
  <div class="card">
    <div class="card-img">
      <% if item.pictures.attached? %>
        <%= link_to image_tag(item.pictures.first.variant(resize: '300x300!').processed, class:"img-responsive"), attire_path(item) %>
      <% else %>
        <%= link_to image_tag('https://via.placeholder.com/300x300', height: "300px", width: "auto", class:"img-responsive"), attire_path(item) %>
      <% end %>
    </div>
    <div class="card-body">
      <h4 class="card-title font-weight-bold text-dark"><%= item.title %></h4>
      <div class="badge badge-pill badge-light"><%= item.price %> â‚¬</div>
      <div>
        <%= link_to "+ d'infos", attire_path(item), class: "btn btn-outline-success btn-sm" %>
        <%= link_to "Ajouter au panier", nil, method: :put, class: "btn btn-success font-weight-bold btn-sm" %>
        <%= link_to "Emprunter", nil, method: :put, class: "btn btn-success font-weight-bold btn-sm" %>
      </div>
    </div>
  </div>
</div>

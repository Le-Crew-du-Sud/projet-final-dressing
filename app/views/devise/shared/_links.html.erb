<%- if controller_name != 'sessions' %>
            <div class="col-4 mb-4">
  <%= link_to "Déjà membre ?", new_session_path(resource_name), class:"btn essence-btn" %></div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="col-md-6 mb-4">
  <%= link_to "S'inscrire", new_registration_path(resource_name), class:"btn essence-btn" %></div>

<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="col-4 mb-4">
  <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class:"btn essence-btn" %><br />
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Je n'ai pas reçu le mail de confirmation", new_confirmation_path(resource_name), class:"btn essence-btn" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Renvoyez moi un mail ?", new_unlock_path(resource_name), class:"btn essence-btn" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <div class="col-4 mb-4">
    <%= link_to "Se connecter avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class:"btn essence-btn"  %><br />
  </div>
  <% end %>
<% end %>

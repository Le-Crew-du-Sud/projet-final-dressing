<!-- ##### Checkout Area Start ##### -->
<div class="checkout_area section-padding-80">
  <div class="container">
    <div class="row">
          <div class="cart-page-heading mb-30">
            <h5>Inscris-toi pour créer ta garde-robe en ligne!</h5>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label "Prénom" %><br/>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control" %>
            </div>
            <div class="col-md-6 mb-3">
              <%= f.label "Nom" %><br/>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control" %>
            </div>
            <div class="col-12 mb-3">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
            </div>
            <div class="col-12 mb-3">
              <%= f.label "description" %><br/>
              <%= f.text_area :about_me, autofocus: true, class:"form-control" %>
            </div>
            <div class="col-12 mb-3">
              <%= f.label "Ville" %><br/><br>
              <%= f.collection_select :city_id, City.all, :id, :town, class:"form-control" %>
            </div>
            <div class="col-12 mb-3">
              <%= f.label "avatar" %><br/>
              <%= f.file_field :avatar, autofocus: true, class:"form-control" %>
            </div>
            <div class="col-md-6 mb-4">
              <%= f.label "Mot de passe" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>
                  characters minimum)</em>
              <% end %><br/>
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
            </div>
            <div class="col-md-6 mb-4">
              <%= f.label "password confirmation" %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
            </div>
            <div class="col-12 mb-3">
              <%= f.submit "Sign up", class:"btn essence-btn" %>
            </div>
            <div class="col-12 mb-3">
            <%= link_to "Retour à l'accueil", "/" %>
            </div>
              <%= render "devise/shared/links" %>

          </div>
        <% end %>
  </div>
</div>
</div>
<!-- ##### Checkout Area End ##### -->

<!-- ##### Header Area Start ##### -->
<header class="header_area">
    <div class="classy-nav-container breakpoint-off d-flex align-items-center justify-content-between">
        <!-- Classy Menu -->
        <nav class="classy-navbar" id="essenceNav">
            <!-- Logo -->
            <%= link_to image_tag('vendor_images/logo.png'), "/", class:"nav-brand" %>
            <!-- Navbar Toggler -->
            <div class="classy-navbar-toggler">
                <span class="navbarToggler"><span></span><span></span><span></span></span>
            </div>
            <!-- Menu -->
            <div class="classy-menu">
                <!-- close btn -->
                <div class="classycloseIcon">
                    <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                </div>
                <!-- Nav Start -->
                <div class="classynav">
                    <ul>


                        <% if user_signed_in? %>
                        <li>
                            <%= link_to 'Ajouter un vêtement',  new_attire_path, class:'nav-item nav-link pr-1' %>
                        </li>
                        <li>
                          <%= link_to 'Déconnexion', destroy_user_session_path, method: :delete, class:'nav-item nav-link pr-1' %>
                        </li>
                        <% else %>
                          <li>
                            <%= link_to "Connexion", new_user_session_path, class:'nav-item nav-link pr-1' %></li>
                          <li>
                            <%= link_to "Inscription", new_user_registration_path, class:'nav-item nav-link' %>
                          </li>
                        <% end %>
                    </ul>
                </div>
                <!-- Nav End -->
            </div>
        </nav>

        <!-- Header Meta Data -->
        <div class="header-meta d-flex clearfix justify-content-end">
            <!-- Search Area -->
            <div class="search-area">
                <form action="/search" method="get">
                    <input type="search" name="q" id="headerSearch" placeholder="Recherche">
                    <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                </form>
            </div>

            <% if user_signed_in? %>
            <!-- User Login Info -->
            <div class="user-login-info">
                <%= link_to image_tag('vendor_images/user.svg'), user_path(current_user.id) %>
            </div>
            <% end %>

            <!-- Cart Area -->
            <div class="cart-area">
                  <%= link_to image_tag('vendor_images/bag.svg', id:"essenceCartBtn"), "#" %><span>3</span>
            </div>
        </div>

    </div>
</header>
<!-- ##### Header Area End ##### -->


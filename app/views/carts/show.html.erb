
<div class="container">
  <div id="flash"></div>
  <h1 class="mb-5 mt-5 font-weight-bold" id="my-cart-title"><i class="fas fa-cart-plus mr-1"></i> Mon panier</h1>
  <div class="row">
      <div class="col-lg-12 col-sm-5">
          <div class="table-responsive">
              <table class="table table-hover">
                  <thead>
                      <tr>
                          <th scope="col"></th>
                          <th scope="col">Produit</th>
                          <th scope="col">Prix de l'article</th>
                          <th scope="col">Quantité</th>
                          <th class="text-right">Supprimer</th>
                      </tr>
                  </thead>
                  <tbody>
                  <% @cart.each do |attire_cart| %>
                      <tr class="font-weight-light" id="attire-<%= attire.id %>">
                          <td style="width: 5%"><%= link_to image_tag(attire.image_url, height: "40px", width: "50px", class: "rounded"), attire_path(attire) %></td>
                          <td style="width: 25%" class="align-middle"><%= link_to attire.title, attire_path(attire), class: "text-muted" %></td>
                          <td style="width: 15%" class="align-middle"><%= attire.price %> €</td>
                          <td style="width: 3%" class="align-middle">
                          <!--Table-->
                            <table>
                                <!--Table body-->
                                <tbody>
                                    <tr>
                                        <td><%= button_to " - ", cart_path(attire), method: :delete, class: "btn btn-default add-attire" %></td>
                                        <td><%= attire.line_attires.where(cart_id: current_user.cart).first.quantity %></td>
                                        <td><%= button_to "+", cart_path(attire), method: :put, class: "btn btn-default add-attire" %></td>
                                    </tr>
                                </tbody>
                                <!--Table body-->
                            </table>
                          <!--Table-->
                          </td>
                          <td class="text-right" class="align-middle">
                            <%= link_to remove_attire_cart_path(attire),method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger mr-3" do %>
                              <i class="fa fa-trash align-middle"></i>
                            <% end %>
                          </td>
                      </tr>
                      <% end %>
                  </tbody>
              </table>
          </div>
      </div>
    </div>
